<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor version="1.0.0" 
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd" 
                       xmlns="http://www.opengis.net/sld" 
                       xmlns:ogc="http://www.opengis.net/ogc" 
                       xmlns:xlink="http://www.w3.org/1999/xlink" 
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <NamedLayer>
    <Name>default_line</Name>
    <UserStyle>
      <Title>Agreed Diversion Routes</Title>
      <Abstract>Polygon and Labels</Abstract>
      <FeatureTypeStyle>
        <Rule>
          <Name>Zoomed-1</Name>
          <Title>Zoomed-1</Title>
          <!-- Main Line Symbolizer -->
          <MinScaleDenominator>0</MinScaleDenominator>
          <MaxScaleDenominator>15000</MaxScaleDenominator>
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#002484</CssParameter>
              <CssParameter name="stroke-width">20</CssParameter>
            </Stroke>
          </LineSymbolizer>
          <!-- Border Line Symbolizer -->
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#497AFA</CssParameter> <!-- Border color -->
              <CssParameter name="stroke-width">18</CssParameter> <!-- Border width -->
            </Stroke>
          </LineSymbolizer>
          <!-- Text Symbolizer for Labels -->
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>route</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">SansSerif</CssParameter>
              <CssParameter name="font-size">16</CssParameter>
              <CssParameter name="font-weight">bold</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.5</AnchorPointX>
                  <AnchorPointY>0.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Halo>
              <Radius>3</Radius>
              <Fill>
                <CssParameter name="fill">#497AFA</CssParameter>
              </Fill>
            </Halo>
            <Fill>
              <CssParameter name="fill">#ffffff</CssParameter> <!-- Label color -->
            </Fill>
            <!-- Graphic margin for better spacing -->
            <VendorOption name="graphic-margin">2</VendorOption>
          </TextSymbolizer>
        </Rule>
        <Rule>
          <Name>Zoomed-2</Name>
          <Title>Zoomed-2</Title>
          <!-- Main Line Symbolizer -->
          <MinScaleDenominator>15001</MinScaleDenominator>
          <MaxScaleDenominator>20000</MaxScaleDenominator>
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#002484</CssParameter>
              <CssParameter name="stroke-width">14</CssParameter>
            </Stroke>
          </LineSymbolizer>
          <!-- Border Line Symbolizer -->
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#497AFA</CssParameter> <!-- Border color -->
              <CssParameter name="stroke-width">12</CssParameter> <!-- Border width -->
            </Stroke>
          </LineSymbolizer>
          <!-- Text Symbolizer for Labels -->
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>route</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">SansSerif</CssParameter>
              <CssParameter name="font-size">16</CssParameter>
              <CssParameter name="font-weight">bold</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.5</AnchorPointX>
                  <AnchorPointY>0.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Halo>
              <Radius>3</Radius>
              <Fill>
                <CssParameter name="fill">#497AFA</CssParameter>
              </Fill>
            </Halo>
            <Fill>
              <CssParameter name="fill">#ffffff</CssParameter> <!-- Label color -->
            </Fill>
            <!-- Graphic margin for better spacing -->
            <VendorOption name="graphic-margin">2</VendorOption>
          </TextSymbolizer>
        </Rule>
        <Rule>
          <Name>Zoomed-3</Name>
          <Title>Zoomed-3</Title>
          <!-- Main Line Symbolizer -->
