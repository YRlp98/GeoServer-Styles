          <Title>Zoomed-3</Title>
          <!-- Main Line Symbolizer -->
          <MinScaleDenominator>25001</MinScaleDenominator>
          <MaxScaleDenominator>30000</MaxScaleDenominator>
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#002484</CssParameter>
              <CssParameter name="stroke-width">6</CssParameter>
            </Stroke>
          </LineSymbolizer>
          <!-- Border Line Symbolizer -->
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#497AFA</CssParameter> <!-- Border color -->
              <CssParameter name="stroke-width">4</CssParameter> <!-- Border width -->
            </Stroke>
          </LineSymbolizer>
          <!-- Text Symbolizer for Labels -->
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>route</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">SansSerif</CssParameter>
              <CssParameter name="font-size">16</CssParameter>
              <CssParameter name="font-weight">bold</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.5</AnchorPointX>
                  <AnchorPointY>0.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Halo>
              <Radius>3</Radius>
              <Fill>
                <CssParameter name="fill">#497AFA</CssParameter>
              </Fill>
            </Halo>
            <Fill>
              <CssParameter name="fill">#ffffff</CssParameter> <!-- Label color -->
            </Fill>
            <!-- Graphic margin for better spacing -->
            <VendorOption name="graphic-margin">2</VendorOption>
          </TextSymbolizer>
        </Rule>
        <Rule>
          <Name>Zoomed-out</Name>
          <Title>Zoomed-out</Title>
          <!-- Main Line Symbolizer -->
          <MinScaleDenominator>30001</MinScaleDenominator>
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#002484</CssParameter>
              <CssParameter name="stroke-width">2</CssParameter>
            </Stroke>
          </LineSymbolizer>
          <!-- Border Line Symbolizer -->
          <LineSymbolizer>
            <Stroke>
              <CssParameter name="stroke">#497AFA</CssParameter> <!-- Border color -->
              <CssParameter name="stroke-width">1</CssParameter> <!-- Border width -->
            </Stroke>
          </LineSymbolizer>
          <!-- Text Symbolizer for Labels -->
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>route</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">SansSerif</CssParameter>
              <CssParameter name="font-size">16</CssParameter>
              <CssParameter name="font-weight">bold</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.5</AnchorPointX>
                  <AnchorPointY>0.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Halo>
              <Radius>3</Radius>
              <Fill>
